  .container 
    .product__content 
      .product__slider 
        .swiper-wrapper 
          .swiper-slide 
            +img("material/1.png")
          .swiper-slide 
            +img("material/2.png")
          .swiper-slide 
            +img("material/3.png")
        .product__slider-bottom
          .swiper-button-prev
          .swiper-pagination
          .swiper-button-next

      .product__info
        .product__info-table
          .product__info-row 
            .product__info-col 
              span Материал
