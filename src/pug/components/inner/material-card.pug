            .product__info-col 
              span Светопропускание
            .product__info-col 
              span 90%
          .product__info-row 
            .product__info-col 
              span Ширина в рулоне
            .product__info-col 
              span 1,4 м; 1,8 м; 2,0 м
          .product__info-row 
            .product__info-col 
              span Намотка
            .product__info-col 
              span 40 м
          .product__info-row 
            .product__info-col 
              span % пластификатора
            .product__info-col 
              span 50-55 phr
          .product__info-row 
            .product__info-col 
              span Защита от УФ
            .product__info-col 
              span да
        .product__info-bottom
          .product__info-block 
            label Цена:
            .product__info-price от #[span 1 400,00] руб./м2
          a.primary-btn.primary-btn_arrow Смотреть цены
