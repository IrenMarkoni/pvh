mixin productCard(data) 
  .product-card__img(style=`background-image: url(${data.img})`)
  .product-card__title=data.title 
  .product-card__table 
    .product-card__column
      .product-card__label Площадь монтажа
      .product-card__data=data.area
        |&nbsp;м#[sup 2]
    .product-card__column 
      .product-card__label Заказ выполнен
      .product-card__data=data.days
    .product-card__column
      .product-card__label Время монтажа
      .product-card__data=data.time
